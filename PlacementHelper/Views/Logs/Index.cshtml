@model IEnumerable<PlacementHelper.Models.Log>

@{
    ViewBag.Title = "Index";
}

<h2>Weekly Logs</h2>

<p>
    @Html.ActionLink("Create New", "Create")

</p>
@using (Html.BeginForm())
{
    if (User.IsInRole("Admin") || User.IsInRole("Lecture"))
    {
        <p>
            Find by email: @Html.TextBox("SearchString")
            <input type="submit" value="Search" />
        </p>
    }
}

<table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AspNetUser.Email)
            </th>
        </tr>
   
        @foreach (var item in Model)
            {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td style="word-break: break-word">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                </td>

                <td class="btn btn-success" style="margin-bottom:5px">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                </td>
                <td class="btn btn-info" style="margin-bottom:5px">
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
                <td class="btn btn-danger" style="margin-bottom:10px">
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    
</table>



    